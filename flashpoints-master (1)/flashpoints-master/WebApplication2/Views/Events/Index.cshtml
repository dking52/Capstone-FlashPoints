@model IEnumerable<FlashPoints.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<br />
<h2>Upcoming Event Calendar</h2>
@*<p>List of future flashPoint events</p>*@
<br />

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Event
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                Begins
            </th>
            <th>
                Ends
            </th>
            <th>
                Points
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @item.StartDateTime.ToShortDateString() @item.StartDateTime.ToShortTimeString()
            </td>
            <td>
                @item.EndDateTime.ToShortDateString() @item.EndDateTime.ToShortTimeString()
            </td>
            <td>
                <strong>@Html.DisplayFor(modelItem => item.PointValue)</strong>
            </td>

            <td>
                <a asp-action="Details" asp-route-id="@item.ID">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
